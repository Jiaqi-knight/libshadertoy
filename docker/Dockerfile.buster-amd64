FROM amd64/debian:buster
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update -qq && \
	apt-get install --no-install-recommends -y \
		git \
		ca-certificates \
		curl \
		build-essential \
		debhelper \
		libc6-dev \
		libstdc++-8-dev \
		libsoil-dev \
		libjpeg-dev \
		libepoxy-dev \
		libglm-dev \
		libopenexr-dev \
		doxygen \
		doxygen-latex \
		graphviz \
		pkg-config \
		cmake && \
	apt-get clean

